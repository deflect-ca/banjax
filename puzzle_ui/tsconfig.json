{
  "compilerOptions": {
    "types": ["./types/shared"],
    "module": "ESNext",
    //we set target ES5 for legacy support
    "target": "ES5",
    "moduleResolution": "node",
    "lib": ["ES5", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "types/**/*"]
}